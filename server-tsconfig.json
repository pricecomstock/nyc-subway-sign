{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "lib": ["dom", "es6", "DOM.Iterable", "ScriptHost", "es2019.array"],
    "sourceMap": true,
    "rootDir": "./server",
    "outDir": "./server-build",
    "moduleResolution": "node",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true
  },
  "types": [],

  "exclude": ["node_modules/*", "__sapper__/*", "public/*", "src/*"]
}
