{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "dom",
      "es6",
      "DOM.Iterable",
      "ScriptHost",
      "es2019.array",
      "es2020"
    ],
    "sourceMap": true,
    "rootDir": "./server",
    "outDir": "./server-build",
    "moduleResolution": "node",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "types": [],

  "exclude": ["node_modules/*", "__sapper__/*", "public/*", "src/*"]
}
